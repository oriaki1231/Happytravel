.wrapper
  = render "home/header"
  .contents
    .contents__left
      .left-box
    .contents__right
      .contents__right__soul
        🇰🇷ソウル現地でのつぶやき🇰🇷
      .contents__right__main
        .text-box
          - @soul. each do |u|
            .text-box__name
              = u.user.name
            .text-box__content
              = u.content
            .text-box__date
              = u.created_at.strftime("%Y/%m/%d %H:%M")
      .form
        = form_for @souls do |f|
          = f.text_field :content, class:"form__message", placeholder:"メッセージを入力してください"
          .form__mask
            = f.label :image, class:"form__mask__image" do
              = icon('fa','image',class: 'icon')
              = f.file_field :image, class:"hidden"
          = f.submit "Send", class:"form__submit"
  = render "home/footer"